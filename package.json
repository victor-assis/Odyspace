{
  "name": "houf",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": "Victor Assis",
  "repository": {
    "type": "git",
    "url": "https://github.com/victor-assis/houf.git"
  },
  "scripts": {
    "start": "lerna run start",
    "start:angular": "lerna run start --scope @houf/angular",
    "start:style": "lerna run start --scope @houf/style",
    "start:tokens": "lerna run start --scope @houf/tokens",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "fix": "lerna run fix",
    "commit": "cz",
    "zip": "run-s zip:**",
    "zip:create": "shx mkdir -p ./tmp",
    "zip:angular": "cd ./dist/angular && bestzip ../../tmp/houf-angular.zip *",
    "zip:linters": "cd ./dist/linters && bestzip ../../tmp/houf-linters.zip *",
    "zip:style": "cd ./dist/style && bestzip ../../tmp/houf-style.zip *",
    "zip:tokens": "cd ./dist/tokens && bestzip ../../tmp/houf-tokens.zip *"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular-builders/jest": "^14.0.0",
    "@houf/linters": "*",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^28.1.7",
    "bestzip": "^2.2.1",
    "commitizen": "^4.2.5",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.0",
    "lerna": "^5.4.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rs-jest": "^1.1.0",
    "sass": "^1.49.9",
    "semantic-release": "^19.0.3",
    "semantic-release-monorepo": "^7.0.5",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
