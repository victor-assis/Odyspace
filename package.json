{
  "name": "@houf/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "nx": "nx",
    "shx": "shx",
    "start": "run-s start:*",
    "start:preview": "vite apps/preview",
    "start:tokens": "nx watch --projects=tokens -- nx run tokens:build",
    "start:styles": "nx run styles:start",
    "build": "nx run-many -t build --prod",
    "postbuild": "npm run zip",
    "docs": "nx affected -t docs",
    "test": "nx affected -t test",
    "lint": "nx affected -t lint",
    "stylelint": "nx affected -t stylelint",
    "zip": "nx run-many -t zip",
    "clear": "shx rm -rf dist && shx rm -rf coverage",
    "release": "nx affected -t release --parallel=1",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@nx/esbuild": "20.1.2",
    "@nx/eslint": "20.1.2",
    "@nx/eslint-plugin": "20.1.2",
    "@nx/jest": "^20.1.2",
    "@nx/js": "20.1.2",
    "@nx/web": "^20.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@swc-node/register": "~1.10.9",
    "@swc/core": "~1.9.2",
    "@swc/helpers": "~0.5.15",
    "@types/jest": "^29.5.14",
    "@types/node": "22.9.1",
    "bestzip": "^2.2.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "nx": "20.1.2",
    "nx-stylelint": "^18.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "sass": "^1.81.0",
    "sassdoc": "^2.7.4",
    "semantic-release": "^24.2.0",
    "semantic-release-monorepo": "^8.0.2",
    "shx": "^0.3.4",
    "stylelint": "^16.10.0",
    "tinycolor2": "^1.6.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.2",
    "typescript": "~5.6.3"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
